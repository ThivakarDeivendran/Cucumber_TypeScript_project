{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "typeRoots": [
        "./node_modules/@types",
        "src/helper/types"
      ],
    }, 
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  